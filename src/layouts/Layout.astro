---
interface Props {
	title: string;
	classList?: string;
}

const { title } = Astro.props;
import "../styles/globals.css";
import "@fontsource-variable/inter";
import Header from "@/components/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {title} - Abhirath
    </title>
  </head>
  <body>

<div class="min-h-screen bg-background text-foreground relative">
  <!-- Mouse background -->
    <div id="grid-bg" class="fixed inset-0 z-0 grid-background" />
      <Header />

    <main class="lg:ml-64 px-6 lg:pl-32 lg:pr-16 py-20 lg:py-16 max-w-4xl w-full mt-16 lg:mt-0">
      <slot />

    </main>
  </div>
  <script is:inline>
    // Mouse position for CSS
    const gridBg = document.getElementById('grid-bg');
    document.addEventListener('mousemove', (e) => {
      gridBg.style.setProperty('--mouse-x', e.clientX + 'px');
      gridBg.style.setProperty('--mouse-y', e.clientY + 'px');
    });
  </script>
  </body>
</html>
