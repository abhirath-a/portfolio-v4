---
import Layout from "../layouts/Layout.astro";
import projects from "../projects";
import { SunMoon } from "@lucide/astro";

const writings = [
	{
		id: "understanding-react-hooks",
		title: "Understanding React Hooks",
		date: "Jan 15, 2024",
	},
	{
		id: "building-scalable-apis",
		title: "Building Scalable APIs",
		date: "Dec 8, 2023",
	},
	{
		id: "typescript-best-practices",
		title: "TypeScript Best Practices",
		date: "Nov 22, 2023",
	},
];
---
<Layout title="About">
      <!-- About -->
      <section id="about" class="flex flex-col justify-center py-12 lg:py-20">
        <div class="space-y-6 text-base lg:text-lg leading-relaxed max-w-2xl font-medium">
          <p>I'm a student based in Washington, DC. I enjoy programming, problem-solving, and experimenting with new technologies.</p>
          <p>Outside of programming I spend my time reading, taking photos, and hiking in my spare time.</p>
        </div>
      </section>

      <!-- Work -->
      <section id="work" class="py-12 lg:py-20 border-t border-border">
        <h3 class="text-sm uppercase tracking-wider font-bold text-muted-foreground mb-8 lg:mb-12">Selected Work</h3>
        <div class="space-y-8">
          {projects.map(project => (
            <div key={project.id} class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline gap-2">
              <div class="flex-1">
                <h4 class="text-lg lg:text-xl font-bold mb-1">{project.title}</h4>
                <p class="text-sm text-muted-foreground">{project.summary}</p>
              </div>
              <span class="text-sm font-medium text-muted-foreground sm:ml-6 shrink-0">{project.year}</span>
            </div>
          ))}
        </div>
      </section>

      <!-- Writing -->
      <section id="writing" class="py-12 lg:py-20 border-t border-border">
        <h3 class="text-sm uppercase tracking-wider font-bold text-muted-foreground mb-8 lg:mb-12">Writing</h3>
        <div class="space-y-6">
          {writings.map(post => (
            <div key={post.id} class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline gap-2">
              <a href={`#${post.id}`} class="text-base lg:text-lg font-medium hover:text-accent-blue transition-colors">{post.title}</a>
              <span class="text-sm text-muted-foreground sm:ml-6 shrink-0">{post.date}</span>
            </div>
          ))}
        </div>
      </section>

</Layout>
